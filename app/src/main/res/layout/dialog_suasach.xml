<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỬA SÁCH"
        android:textColor="#7A3B3B"
        android:gravity="center"
        android:textSize="30dp"
        android:background="#AF9155"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20px"
        android:paddingLeft="10dp">
        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edtEditTensach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mời nhập tên sách mới"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20px"
        android:paddingLeft="10dp">
        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edtEditGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mời nhập giá mới"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20px"
        android:paddingLeft="10dp">
        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Mã Sách"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edtEditMaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mời nhập mã sách mới"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20px"
        android:paddingLeft="10dp">
        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Số Lượng"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edtEditSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mời nhập số lượng mới"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20px"
        android:paddingLeft="10dp">
        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Nội dung"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edtEditNoidung"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Mời nhập nội dụng mới"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCaphatsach"
            android:text="Sửa sách"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#B634DA"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnThoatsuasach"
            android:text="Thoát"
            android:backgroundTint="#B634DA"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>



</LinearLayout>