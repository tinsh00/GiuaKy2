<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".qlsach.SachActivity">


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="DANH SÁCH"
      android:textSize="30dp"
      android:textColor="#221818"
      android:textStyle="bold"
      android:gravity="center"
      android:background="#BFB6B6"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">

    <Button
        android:id="@+id/btnAdd_Sach"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:backgroundTint="#79000000"/>
    <Button
        android:id="@+id/btnDel_Sach"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:backgroundTint="#79000000"/>
    <Button
        android:id="@+id/btnEdit_Sach"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Sửa"
        android:backgroundTint="#79000000"/>
  </LinearLayout>
  <Button
      android:id="@+id/btnBacK_Sach"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="BACK"
      android:backgroundTint="#79000000"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tVBia"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Bia"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/tVName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Ten sach"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/tVGia"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Gia"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/tVSl"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Sl"
        android:textStyle="bold"
        android:gravity="center" />

<!--    <Spinner-->
<!--        android:id="@+id/spinner_quick_menu"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->

<!--        android:spinnerMode="dropdown"-->
<!--        />-->
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <ListView
        android:id="@+id/listVDSSach"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </LinearLayout>
</LinearLayout>